{
    "compileOnSave": true,
    "compilerOptions": {
      "target": "ES2018",
      "module": "commonjs",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "experimentalDecorators": true,
      "noImplicitAny": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "dist",
      "baseUrl": "./",
      "paths": {
        "@src/*": [
          "src/*"
        ],
        "@config/*": [
          "src/config/*"
        ]
      }
    },
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "node_modules",
      "**/*.spec.ts",
      "**/*.d.ts"
    ]
  }
  